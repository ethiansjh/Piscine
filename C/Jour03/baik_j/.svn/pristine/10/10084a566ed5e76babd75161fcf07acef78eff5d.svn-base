char*	my_strchr(char *str, int c)
{
  int	i;

  i = 0;
  while (*(str + i) != '\0')
    {
      i = i + 1;
      if (*(str + i) == c)
	{
	  return ((str + i));
	}
    }
  return ("\0");
}
