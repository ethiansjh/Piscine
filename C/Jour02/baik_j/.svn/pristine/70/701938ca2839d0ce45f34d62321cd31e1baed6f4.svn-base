char	*my_strlowcase(char str[])
{
  int	i;

  for (i = 0; str[i] != '\0'; i = i + 1)
    {
      if (str[i] >= 'A' && str[i] <= 'Z')
	{
	  str[i] = str[i] + 32;
	}
    }
  return (str);
}
