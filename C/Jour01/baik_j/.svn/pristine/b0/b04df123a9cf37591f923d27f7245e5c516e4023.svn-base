char	my_prev_char(char c)
{
  if((c >= 'a' && c <= 'z') || (c >= 'A' && c <= 'Z'))
    {
      if(c == 'a')
	{
	  c = 'z';
	  return c;
	}
      else if(c == 'A')
	{
	  c = 'Z';
	  return c;
	}
      else
	{
	  c = c - 1;
	  return c;
	}
    }
  else
    {
      return '\n';
    }
}
