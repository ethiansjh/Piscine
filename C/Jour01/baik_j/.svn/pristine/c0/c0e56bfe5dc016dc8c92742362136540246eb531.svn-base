char	my_next_char(char c)
{
  char a;

  if (c >= 'A'  && c <= 'z')
    {
      if ((c == 'Z') || (c == 'z'))
	{
	  a = c - ('Z' - 'A');
	  return (a);
	}
      else
	{
	  a = c + 1;
	  return (a);
	}
    }
  else
    {
      return (' ');
    }
}
