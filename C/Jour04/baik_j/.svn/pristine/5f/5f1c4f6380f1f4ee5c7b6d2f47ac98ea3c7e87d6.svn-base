char	*my_strncpy(char *dest, char *src, int n)
{
  int	i;

  for (i = 0; i < n; i = i + 1)
    {
     
      if (*(src + i) == '\0')
	{
	  *(dest + i) = '\0';
	}
       *(dest + i) = *(src + i);
    }
  return (dest);
}
