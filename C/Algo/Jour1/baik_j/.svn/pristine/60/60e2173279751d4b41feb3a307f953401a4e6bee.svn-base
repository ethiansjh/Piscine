int	my_fact_rec(int nb)
{
  int	res;
  
  if (nb < 0)
    {
      return (0);
    }
  if (nb == 0 || nb == 1)
    {
      return (1);
    }
  res = nb * my_fact_rec(nb - 1);
  return (res);
}
