#include <stdio.h>
char	my_putchar(char c);

void	enc_cesar(char *str, int n)
{
  int	i;

  for (i = 0; str[i]; i++)
    {
      if (str[i] >= 'A' && str[i] <= 'Z')
	{
	  my_putchar((str[i - n]) % 26);

	}
      if (str[i] >= 'a' && str[i] <= 'z')
	{
	  my_putchar((str[i - n]) % 26);
	}
    }
      
}

int	main()
{
  enc_cesar("OUI", 3);
}
